using System;

class Figura
{
    internal virtual double CalcularArea()
    {
        return 0;
    }
}

class Quadrado : Figura
{
    double lado;

    internal Quadrado(double l)
    {
        lado = l;
    }

    internal override double CalcularArea()
    {
        return lado * lado;
    }
}

class Retangulo : Figura
{
    double baseR;
    double altura;

    internal Retangulo(double b, double a)
    {
        baseR = b;
        altura = a;
    }

    internal override double CalcularArea()
    {
        return baseR * altura;
    }
}

class Triangulo : Figura
{
    double baseT;
    double altura;

    internal Triangulo(double b, double a)
    {
        baseT = b;
        altura = a;
    }

    internal override double CalcularArea()
    {
        return (baseT * altura) / 2;
    }
}

class Circulo : Figura
{
    double raio;

    internal Circulo(double r)
    {
        raio = r;
    }

    internal override double CalcularArea()
    {
        return 3.14 * raio * raio;
    }
}

class Program
{
    static void Main()
    {
        int op;

        while (true)
        {
            Console.WriteLine("\n1-Quadrado");
            Console.WriteLine("2-Retangulo");
            Console.WriteLine("3-Triangulo");
            Console.WriteLine("4-Circulo");

            int.TryParse(Console.ReadLine(), out op);

            Figura f = null;

            if (op == 1)
            {
                Console.Write("Lado: ");
                double l;
                double.TryParse(Console.ReadLine(), out l);
                f = new Quadrado(l);
            }
            else if (op == 2)
            {
                Console.Write("Base: ");
                double b;
                double.TryParse(Console.ReadLine(), out b);

                Console.Write("Altura: ");
                double a;
                double.TryParse(Console.ReadLine(), out a);

                f = new Retangulo(b, a);
            }
            else if (op == 3)
            {
                Console.Write("Base: ");
                double b;
                double.TryParse(Console.ReadLine(), out b);

                Console.Write("Altura: ");
                double a;
                double.TryParse(Console.ReadLine(), out a);

                f = new Triangulo(b, a);
            }
            else if (op == 4)
            {
                Console.Write("Raio: ");
                double r;
                double.TryParse(Console.ReadLine(), out r);
                f = new Circulo(r);
            }

            if (f != null)
            {
                Console.WriteLine("Area: " + f.CalcularArea());
            }
        }
    }
}
