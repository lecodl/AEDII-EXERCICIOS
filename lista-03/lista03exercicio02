using System;

class CorpoCeleste
{
    double massa;
    double densidade;
    double posX;
    double posY;

    internal CorpoCeleste(double m, double d, double x, double y)
    {
        massa = m;
        densidade = d;
        posX = x;
        posY = y;
    }

    internal double GetMassa() { return massa; }
    internal double GetPosX() { return posX; }

    internal double CalcularRaio()
    {
        return Math.Pow((massa / densidade), 1.0 / 3.0);
    }
}

class Program
{
    static void Main()
    {
        CorpoCeleste[] corpos = new CorpoCeleste[10];

        for (int i = 0; i < 10; i++)
        {
            Console.WriteLine("Corpo " + (i + 1));

            Console.Write("Massa: ");
            double massa = double.Parse(Console.ReadLine());

            Console.Write("Densidade: ");
            double densidade = double.Parse(Console.ReadLine());

            Console.Write("Posição X: ");
            double x = double.Parse(Console.ReadLine());

            Console.Write("Posição Y: ");
            double y = double.Parse(Console.ReadLine());

            corpos[i] = new CorpoCeleste(massa, densidade, x, y);
            Console.WriteLine();
        }

        CorpoCeleste maiorMassa = corpos[0];
        CorpoCeleste maiorRaio = corpos[0];

        for (int i = 1; i < 10; i++)
        {
            if (corpos[i].GetMassa() > maiorMassa.GetMassa())
                maiorMassa = corpos[i];

            if (corpos[i].CalcularRaio() > maiorRaio.CalcularRaio())
                maiorRaio = corpos[i];
        }

        CorpoCeleste c1 = corpos[0];
        CorpoCeleste c2 = corpos[0];
        double maiorDistancia = 0;

        for (int i = 0; i < 10; i++)
        {
            for (int j = i + 1; j < 10; j++)
            {
                double distancia = Math.Abs(corpos[i].GetPosX() - corpos[j].GetPosX());

                if (distancia > maiorDistancia)
                {
                    maiorDistancia = distancia;
                    c1 = corpos[i];
                    c2 = corpos[j];
                }
            }
        }

        Console.WriteLine("Maior massa: " + maiorMassa.GetMassa());
        Console.WriteLine("Maior raio: " + maiorRaio.CalcularRaio());
        Console.WriteLine("Mais distantes no eixo X: " + c1.GetPosX() + " e " + c2.GetPosX());
    }
}
